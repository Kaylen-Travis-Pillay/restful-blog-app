<% include partials/head_btitle %>
    <title>RESTful Blog | Edit - <%= blog.title %> | Kaylen Travis Pillay</title>
<% include partials/head_atitle %>

        <div class="ui bottom attached center aligned container">
            <h1 class="ui icon header">
                <i class="heart icon"></i>
                <div class="content">
                    <%= blog.title %>
                    <div class="sub header">
                        <%= blog.created %>
                    </div>
                </div>
            </h1>
        </div>
        <div class="ui container teal segment">
            <form id="new-blog-form" class="ui form" action="/blogs" method="POST">
                <div class="field">
                    <label for="title">Title</label>
                    <input type="text" name="blog[title]" id="title" value="<%= blog.title %>">
                </div>
                <div class="field">
                    <label for="image-url">Image URL</label>
                    <input type="text" name="blog[image]" id="image-url" value="<%= blog.image %>">
                </div>
                <div class="field">
                    <label for="post-body">Post Body</label>
                    <textarea name="blog[body]" id="post-body" form="new-blog-form" spellcheck="true"><%= blog.body %></textarea>
                </div>
                <div class="field">
                    <button class="ui basic teal animated fade button">
                        <div class="visible content">
                            <i class="exchange icon"></i>
                            Edit
                        </div>
                        <div class="hidden content">
                            Edit My Post
                        </div>
                    </button>
                </div>
                <div class="ui error message"></div>
            </form>
        </div>

<% include partials/foot %>